<div class="section">
  <div class="columns is-centered">
    <div class="column is-half">
      <h3 class="title">Create Post</h3>

        <%= simple_form_for(@post) do |f| %>
          <%= f.error_notification %>

          <div class="field">
          <div class="control">
            <%= f.input :title,
                    required: true,
                    autofocus: true,
                    input_html: { class: "input" },
                    wrapper: false,
                    label_html: { class: "label" } %>
          </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :body,
                      required: true,
                      label_html: { class: "label" },
                      wrapper: false,
                      input_html: { class: "textarea" } %>

            </div>
          </div>

          <div class="field">
			    <div class="control">
		 		    <%= f.button :submit, "Submit", class:"button is-primary is-medium" %>
		 	    </div>
		    </div>
      <% end %>
    </div>
  </div>
</div>